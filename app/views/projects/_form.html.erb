<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @project, url: @form_target do |f| %>
        <br>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <%= f.label :github %>
        <%= f.text_field :github, class: 'form-control' %>
        <br>
        <%= f.label :store %>
        <%= f.url_field :store, class: 'form-control' %>
        <br>
        <%= f.label :desc %>
        <%= f.text_area :desc, class: 'form-control' %>
        <br>
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control', style: 'height:150px' %>
        <br>
        <%= label_tag 'tags' %>
        <%= text_field_tag 'tags', @tags, id: 'tags', type: 'text', class: 'form-control' %>
        <br>
        <%= f.submit class: 'form-control btn btn-primary' %>
    <% end %>
  </div>
</div>