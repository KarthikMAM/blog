<tr class="project" id="project-<%= project.id %>">
  <td>
    <h3>
      <%= link_to project.name, project %>
    </h3>
    <p>
      <%= project.desc %>
    </p>
  </td>
  <% if logged_in? %>
      <td>
        <%= link_to 'Edit', project_path(project.id), class: 'btn btn-danger' %>
      </td>
  <% end %>
</tr>